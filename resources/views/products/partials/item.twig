<div class="thumbnail">
	<img class="img-responsive" src="{{ base_url() }}/assets/img/ph.jpg" alt="Image">
	<div class="caption">
		<div class="stock-info clearfix">
			{% if product.hasLowStock() %}
			<h4 class="pull-right"><span class="label label-warning">Low stock</span></h4>
			{% endif %}
			{% if product.outOfStock() %}
			<h4 class="pull-right"><span class="label label-danger">Out of stock</span></h4>
			{% endif %}
		</div>
		<a href="{{ path_for('product.get', { slug: product.slug }) }}"><h3>{{ product.title }}</h3></a>
		<p>{{ product.description }}</p>
		<div class="clearfix">
			<span class="price pull-left">${{ product.price }}</span>
			{% if product.inStock() %}
			<a href="{{ path_for('cart.add', { slug: product.slug, quantity: 1 }) }}" class="btn btn-default pull-right" role="button">Add to cart</a>
			{% endif %}
		</div>
	</div>
</div>
